@model IEnumerable<TravelMate.Models.Testmonial>

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1>Pending Testimonials</h1>

<table class="table">
    <thead>
        <tr>
            <th>Message</th>
            <th>User Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Msg</td>
                <td>@item.User.Fname @item.User.Lname</td>
                <td>
                    <form asp-action="ApproveTestimonial" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="submit" value="Approve" class="btn btn-success" />
                    </form>
                    <form asp-action="RejectTestimonial" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="submit" value="Reject" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<Room>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var hotelName = ViewBag.hotelName;
}

<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-left: 6rem;
    }

    .welcome-message h2 {
        display: flex;
        justify-content: center;
        align-items: center;
        line-height: 1.6;
        color: #86b817fa;
        text-align: justify;
        margin-bottom: 20px;
        font-size: -webkit-xxx-large;
        background-color: #0000000a;
        border-radius: 15px;
    }

    .welcome-message p {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 16px;
        line-height: 1.6;
        color: #333;
        text-align: justify;
        margin-bottom: 20px;
    }

</style>
<div>
    <div class="welcome-message">
        <h2>Welcome to @hotelName.</h2>

        <p>  Explore the available rooms at <strong>@hotelName</strong>, where every detail is crafted to offer you a memorable stay. </p>
        <p> We wish you a delightful and relaxing vacation. </p>

    </div>
    <div class="row container">
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                    <h6 class="card-title mb-0 text-center ">Room List</h6>
                    <div class="table-responsive">
                    <table class="table table-striped table-borderless">
                        <thead>
                            <tr>
                                <th>Room Type</th>
                                <th>Room Number</th>
                                <th>Price Per Night</th>
                                <th>Is Available</th>
                                <th>Book</th> 
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Roomtype</td>
                                    <td>@item.Roomnumber</td>
                                    <td>@item.Pricepernight</td>
                                    <td>@item.Isavailable</td>
                                    <td>
                                        <form asp-action="BookNow" asp-controller="HomePages" method="get">
                                            <input type="hidden" name="roomId" value="@item.RoomId" />
                                            <button type="submit" class="btn btn-primary">Book Now</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


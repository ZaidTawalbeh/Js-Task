@model Userr

@{
	Layout = "~/Views/Shared/_UserLayout.cshtml";

}
<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #f6d365;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right bottom, rgb(134 184 23 / 78%), rgb(194 253 133 / 63%))
        
    }

    #mini-container{
        box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);
        border-top-left-radius: .5rem;
        border-bottom-left-radius: .5rem;
    }

    #container{
        box-shadow: 0px 0px 18px 13px rgba(0, 0, 0, 0.2);
    }
</style>    
<section class="vh-100" style="background-color: #f4f5f7;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-12 mb-12 mb-lg-12">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0" id="container">
                        <div class="col-md-4 gradient-custom text-center text-white" id="mini-container">
                            <img src=@Url.Content("~/Images/"+ViewBag.ImagePath)
                                 alt="Avatar" class="img-fluid my-5" style="width: 140px;" />
                            <h5>Marie Horwitz</h5>
                            <p style="color:#2C3E50">Edit Profile</p>
                            <a asp-action="EditProfile">
                                <i class="far fa-edit mb-5"></i>
                           </a> 
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6>Information</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>First Name</h6>
                                        <p class="text-muted">@ViewBag.Fname</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Last Name</h6>
                                        <p class="text-muted">@ViewBag.Lname</p>
                                    </div>
                                </div>
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Email</h6>
                                        <p class="text-muted">@ViewBag.Emale</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Phone Number</h6>
                                        <p class="text-muted">@ViewBag.Phone</p>
                                    </div><div class="col-6 mb-3">
                                        <h6>User Name</h6>
                                        <p class="text-muted">@ViewBag.username</p>
                                    </div><div class="col-6 mb-3">
                                        <h6>Your Password</h6>
                                        <p class="text-muted">@ViewBag.password</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>







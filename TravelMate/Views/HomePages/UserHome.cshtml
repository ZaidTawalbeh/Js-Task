@model IEnumerable<Hotel>



@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";

}



<!-- Package Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Hotels</h6>
            <h1 class="mb-5">Awesome Hotels</h1>
        </div>

        <div class="row g-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="package-item">
                        <div class="overflow-hidden">
                            <img src=@Url.Content("~/Images/"+item.ImagePath) alt="" asp-append-version="true" width="100%" height="300">
                        </div>
                        <div class="d-flex border-bottom">
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-map-marker-alt text-primary me-2"></i>Jordan</small>
                        </div>
                        <div class="text-center p-4">
                            <h3>@item.Hotelname</h3>
                            <div class="mb-3">
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                            </div>
                            <p>We always strive for your comfort. Book your room now!</p>
                            <div class="d-flex justify-content-center mb-2">
                                <a asp-action="GetRoomByHotelId" asp-route-id="@item.HotelId" class="btn_3">View Room List</a>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<!-- Package End -->
<!-- Service Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Services</h6>
            <h1 class="mb-5">Our Services</h1>
        </div>
        <div class="row g-4">
            @foreach (var item in (IEnumerable<Service>)ViewData["service"])
            {
                <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="service-item rounded pt-3">
                        <div class="p-4">
                            <i class="fa fa-3x fa-globe text-primary mb-4"></i>
                            <h5>@item.Servicename</h5>
                            <p>@item.Servicedescription</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Our Events -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Events</h6>
            <h1 class="mb-5">Our Events</h1>
        </div>
        <div class="row g-4" style="display:flex ; justify-content:center; align-items:center">
            @foreach (var item in (IEnumerable<Event>)ViewData["events"])
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item">
                        <div class="overflow-hidden">
                            <img class="img-fluid" src=@item.ImagePath alt="">
                        </div>
                        <div class="text-center p-4">
                            <h5 class="mb-0">@item.Eventname</h5>
                            <small>@item.Eventdescription</small>
                            <div>

                                <h6> Hotel Name : @item.Hotel.Hotelname </h6>

                            </div>
                        </div>

                    </div>
                </div>
            }
            
        </div>
    </div>
</div>
<!-- Team End -->


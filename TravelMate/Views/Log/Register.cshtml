@model TravelMate.Models.Userr
@{
    Layout = null;
}



<!doctype html>
<html lang="en">
<head>
    <title>Register TravelMate</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Login/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(../Login/images/bg.jpg); width:99%;">
    <section class="ftco-section">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4" style="margin-top : -65px">
                    <div class="login-wrap p-0">
                        <a asp-action="Login">
                              <h3 class="mb-4 text-center">Have an account?</h3>
                        </a>
                        <form method="POST" enctype="multipart/form-data" class="signin-form" id="register-form" asp-action="Register">

                            <div class="form-group">
                            <input asp-for="Fname" class="form-control" placeholder="First Name" />
                                <span asp-validation-for="Fname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                            <input asp-for="Lname" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="Lname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                            <input asp-for="Phone" class="form-control" placeholder="Phone" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                            <input asp-for="Emale" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Emale" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                            <input type="text" class="form-control" name="userName" id="userName" placeholder="User Name" />
                            </div>
                            <div class="form-group">
                            <input type="password" class="form-control" name="password" id="password" placeholder="Password" />
                            </div>
                            <div class="form-group">
                            <input asp-for="ImageFile" class="form-control" placeholder="Image" accept="Image/*" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign Up</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Login/js/jquery.min.js"></script>
    <script src="~/Login/js/popper.js"></script>
    <script src="~/Login/js/bootstrap.min.js"></script>
    <script src="~/Login/js/main.js"></script>

</body>
</html>

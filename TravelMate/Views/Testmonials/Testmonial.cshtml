@model IEnumerable<Testmonial>
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";

}

<style>
    .button-container{
        display:flex;
        justify-content:center;
        margin-top:20px;
    }

    .styled-button {
        background-color: #b6e736; /* اللون الأخضر الخلفي */
        border: none; /* إزالة الحدود */
        color: white; /* لون النص */
        padding: 15px 30px; /* المسافة الداخلية */
        font-size: 16px; /* حجم النص */
        text-align: center; /* محاذاة النص */
        text-decoration: none; /* إزالة التسطير من النص */
        display: inline-block; /* عرض داخلي */
        border-radius: 30px; /* جعل الزوايا دائرية بشكل كامل */
        cursor: pointer; /* تغيير المؤشر إلى اليد */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* إضافة ظل خفيف */
        transition: background-color 0.3s ease; /* إضافة تأثير عند التمرير */
    }

        .styled-button:hover {
            background-color: #a4d42c; 
        }
</style>

<!-- Testimonial Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="text-center">
            <h6 class="section-title bg-white text-center text-primary px-3">Testimonial</h6>
            <h1 class="mb-5">Our Clients Say!!!</h1>
        </div>
        <div class="owl-carousel testimonial-carousel position-relative">

        @if (Model != null)
        {
            @foreach (var item in ViewBag.Testmonial)
            {
                    <div class="testimonial-item bg-white text-center border p-4">
                        <img class="bg-white rounded-circle shadow p-1 mx-auto mb-3" src=@Url.Content("~/Images/"+item.User.ImagePath) style="width: 80px; height: 80px;">
                        <h5 class="mb-0">@item.User.Fname @item.User.Lname</h5>
                        <p>@item.User.Emale</p>
                        <p class="mb-0">@item.Msg</p>
                    </div>
            }
           
        }
        else
        {
        <p>No testimonials available.</p>
        }
        </div>
    </div>
    <div class="button-container">

        <a asp-controller="HomePages" asp-action="AddTestimonial"><button class="styled-button">Add New Testmonial</button></a>

    </div>

</div>
<!-- Testimonial End -->
